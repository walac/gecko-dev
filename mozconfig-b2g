# Build B2G
ac_add_options --enable-application=b2g
ac_add_options --target=arm-linux-androideabi

# Disable crash reporting, WebRTC
ac_add_options --disable-crashreporter
ac_add_options --disable-webrtc

# With the following Android SDK and NDK:
ac_add_options --with-android-ndk="$HOME/work/android-ndk-r17b"
ac_add_options --with-android-version=23

# Auto-clobber
mk_add_options AUTOCLOBBER=1

# sccache
ac_add_options --with-ccache=sccache

ac_add_options --disable-replace-malloc

# Gonk-specific stuff
ac_add_options --with-gonk-gfx
#ac_add_options --with-gonk="$GONK_PATH"
ANDROID_SOURCE="$GONK_PATH"
ANDROID_VERSION=23
